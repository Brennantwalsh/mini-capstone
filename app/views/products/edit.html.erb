<h1>Update Inventory</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class = "form-group">
    <%= label_tag :name, 'Enter name'%>
    <%= text_field_tag :name, @product.name %>
  </div>
  <div class = "form-group">
    <%= label_tag :price, 'Enter price'%>
    <%= text_field_tag :price, @product.price %>
  </div>
  <div class = "form-group">
    <%= label_tag :image, 'Enter image'%>
    <%= text_field_tag :image, @product.image %>
  </div>
  <div class = "form-group">
    <%= label_tag :description, 'Enter description'%>
    <%= text_field_tag :description, @product.description %>
  </div>
  <div class = "form-group">
    <%= label_tag :in_stock, 'In stock?'%>
    <%= text_field_tag :in_stock, @product.in_stock %>
  </div>
  <div class = "form-group">
    <%= label_tag :supplier_id, 'Supplier'%>
    <%= text_field_tag :supplier_id, @product.supplier_id %>
  </div>
  <div>
    <%= submit_tag 'Submit' %>
  </div>

<% end %>