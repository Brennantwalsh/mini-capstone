<h1>Add Supplier</h1>

<%= form_tag '/suppliers', method: :post do %>
  <div class = "form-group">
    <%= label_tag :name, 'Enter name'%>
    <%= text_field_tag :name%>
  </div>
  <div class = "form-group">
    <%= label_tag :email, 'Enter email'%>
    <%= text_field_tag :email%>
  </div>
  <div class = "form-group">
    <%= label_tag :phone, 'Enter phone'%>
    <%= text_field_tag :phone%>
  </div>
  <div>
    <%= submit_tag 'Submit' %>
  </div>

<% end %>