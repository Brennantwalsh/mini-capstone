<h1>Edit Supplier</h1>

<%= form_tag "/suppliers/#{@supplier.id}" , method: :patch do %>
  <div class = "form-group">
    <%= label_tag :name, 'Enter name'%>
    <%= text_field_tag :name, @supplier.name %>
  </div>
  <div class = "form-group">
    <%= label_tag :email, 'Enter email'%>
    <%= text_field_tag :email, @supplier.email %>
  </div>
  <div class = "form-group">
    <%= label_tag :phone, 'Enter phone'%>
    <%= text_field_tag :phone, @supplier.phone %>
  </div>
  <div>
    <%= submit_tag 'Submit' %>
  </div>

<% end %>